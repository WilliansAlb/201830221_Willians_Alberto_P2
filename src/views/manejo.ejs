<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="./css1.css" />
    <title>Proyecto 2 LFYP</title>
</head>

<body
    style='background-image: url(https://thomasarthurfightforlife.com/wp-content/uploads/lazerhawk-retro-style-abstract-synthwave_1844333.jpg);background-size: cover;'>
    <center>
        <div id="central" style='margin: 17% 30% 15% 30%;background-color: #150016;color: yellow;'>
            <%include nav.html%>
            <div id="ingresar">
                <h2>Analizador</h2>
                <h3>Ingresa el archivo</h3>
                <input id="archivo" type="file" name="archivo" accept=".txt" style="margin-bottom: 10px;" />
                <input id="botons" type="button" value="verificar" onclick="mostrar()" />
            </div>
            <div id='contenido'
                style="background-color: #505050; margin: 0% 10% 5% 10%; display:none;color:#150016;text-align: left; padding: 10px;">

            </div>
            <input type="button" value="Analizar" id='get' style="margin-bottom: 10px; display: none;" disabled
                onclick="mostrarTabla()" />
            <input type="button" value="Enviar archivo" id='post' style="margin-bottom: 10px; display: none;" onclick="habilitarBoton()"/>
            <button id="ocultart" style="display: none;" onclick="funcion2()">Ocultar tabla</button>
            <div id='tabla1' style="display: none;">
                <table id="tabla0">
                    <thead>
                        <tr>
                            <th>Token</th>
                            <th>Tipo</th>
                            <th>Fila</th>
                            <th>Columna</th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </center>
    <%include foot.html%>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/manejo.js"></script>
    <script>
        function mostrar() {
            var x = document.getElementById('contenido');
            var y = document.getElementById('central');
            var z = document.getElementById('get');
            var a = document.getElementById('post');
            if (x.style.display = 'none') {
                x.style.display = 'block';
                z.style.display = 'inline-block';
                a.style.display = 'inline-block';
                y.style.margin = '2% 30% 5% 30%';
            } else {
                x.style.display = 'none';
            }
        }
        function mostrarTabla() {
            var x = document.getElementById('tabla1');
            var button = document.getElementById('get');
            var ocultart = document.getElementById('ocultart');
            if (x.style.display = 'none') {
                x.style.display = 'block';
                button.disabled = 'true';
                ocultart.style.display = 'block';
            }
        }
        function habilitarBoton(){
            document.getElementById('get').disabled = false;
            document.getElementById('post').disabled = true;
        }
        function funcion2() {
            var x = document.getElementById('tabla1');
            var ocultart = document.getElementById('ocultart');
            if (x.style.display === 'block') {
                x.style.display = 'none';
                ocultart.innerText = 'Mostrar tabla';
            } else {
                x.style.display = 'block';
                ocultart.innerText = 'Ocultar tabla';
            }
        }
    </script>

</body>

</html>